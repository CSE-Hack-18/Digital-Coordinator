<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4F3FF"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/admit_page"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Admit Patient"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Discharge Patient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admitswipe" />

    <Button
        android:id="@+id/admitswipe"
        android:layout_width="113dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:text="Admit swipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admit_page" />

</android.support.constraint.ConstraintLayout>